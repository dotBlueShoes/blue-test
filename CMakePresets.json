{
    "version": 4,
    "configurePresets": [
        {
            "name": "windows-base",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "installDir": "${sourceDir}/install/${presetName}",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "x64-win-debug",
            "displayName": "x64 Debug",
            "inherits": "windows-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "BLUE_ENABLE_BENCHMARKS": "ON",
                "BLUE_ENABLE_TESTS": "ON",
                "BLUE_ENABLE_CCC": "ON",
                "PROFILE": {
                    "type": "INT",
                    "value": "1"
                }
            }
        },
        {
            "name": "x64-win-release",
            "displayName": "x64 Release",
            "inherits": "windows-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "BLUE_ENABLE_BENCHMARKS": "ON",
                "BLUE_ENABLE_TESTS": "ON",
                "BLUE_ENABLE_CCC": "ON",
                "PROFILE": {
                    "type": "INT",
                    "value": "2"
                }
            }
        }
    ]
}
